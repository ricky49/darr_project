
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Codigo:"
        android:id="@+id/textView6"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/carCodigo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/carCodigo"
        android:text="text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Producto:"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:layout_below="@+id/carCodigo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/carProducto"
        android:text="text"
        android:singleLine="true"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/carCodigo"
        android:layout_alignStart="@+id/carCodigo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Precio:"
        android:textColor="#000000"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/carPrecio"
        android:text="text"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:id="@+id/bRemove"
        android:text="Remover"
        android:background="@drawable/roundedbutton"
        android:layout_gravity="right|top"
        android:layout_alignTop="@+id/carTotal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cantidad:"
        android:textColor="#000000"
        android:id="@+id/textView30"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/carCantidad"
        android:text="text"
        android:layout_alignBottom="@+id/textView30"
        android:layout_alignLeft="@+id/carPrecio"
        android:layout_alignStart="@+id/carPrecio" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Total:"
        android:textColor="#000000"
        android:id="@+id/textView31"
        android:layout_below="@+id/carCantidad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/carTotal"
        android:text="text"
        android:layout_alignBottom="@+id/textView31"
        android:layout_alignLeft="@+id/carCantidad"
        android:layout_alignStart="@+id/carCantidad" />


</RelativeLayout>