<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#ffffff">


            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Crear Nuevo Reporte"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Paciente:"
                android:id="@+id/textView6"
                android:textColor="#000000"
                android:layout_alignBaseline="@+id/etpaciente"
                android:layout_alignBottom="@+id/etpaciente"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etpaciente"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/etnss"
                android:layout_alignStart="@+id/etnss"
                android:layout_marginTop="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Seguro:"
                android:id="@+id/textView2"
                android:textColor="#000000"
                android:layout_above="@+id/etnss"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spArs"
                android:layout_above="@+id/etnss"
                android:spinnerMode="dropdown"
                android:layout_alignLeft="@+id/etdoctor"
                android:layout_alignStart="@+id/etdoctor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="NSS:"
                android:textColor="#000000"
                android:id="@+id/textView4"
                android:layout_above="@+id/etbandejasID"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etnss"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/spArs"
                android:layout_alignStart="@+id/spArs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Bandeja:"
                android:textColor="#000000"
                android:id="@+id/textView8"
                android:layout_above="@+id/etFechaCirugia"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etbandejasID"
                android:layout_above="@+id/etFechaCirugia"
                android:layout_alignLeft="@+id/etFechaCirugia"
                android:layout_alignStart="@+id/etFechaCirugia"
                android:layout_alignRight="@+id/etnss"
                android:layout_alignEnd="@+id/etnss" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Fecha Cirugia:"
                android:textColor="#000000"
                android:id="@+id/textView10"
                android:layout_above="@+id/etdoctor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etFechaCirugia"
                android:layout_above="@+id/etdoctor"
                android:layout_alignLeft="@+id/etdoctor"
                android:layout_alignStart="@+id/etdoctor"
                android:layout_alignRight="@+id/etnss"
                android:layout_alignEnd="@+id/etnss" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Centro:"
                android:textColor="#000000"
                android:id="@+id/textView12"
                android:layout_alignBaseline="@+id/spCentro"
                android:layout_alignBottom="@+id/spCentro"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spCentro"
                android:layout_above="@+id/etcirujanoID"
                android:layout_alignLeft="@+id/etcirujanoID"
                android:layout_alignStart="@+id/etcirujanoID"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Doctor:"
                android:textColor="#000000"
                android:id="@+id/textView14"
                android:layout_alignBaseline="@+id/etdoctor"
                android:layout_alignBottom="@+id/etdoctor"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etdoctor"
                android:layout_above="@+id/spCentro"
                android:layout_alignLeft="@+id/benviarReporte"
                android:layout_alignStart="@+id/benviarReporte"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Cirujano:"
                android:textColor="#000000"
                android:id="@+id/textView16"
                android:layout_alignBaseline="@+id/etcirujanoID"
                android:layout_alignBottom="@+id/etcirujanoID"
                android:layout_alignRight="@+id/textView6"
                android:layout_alignEnd="@+id/textView6" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etcirujanoID"
                android:layout_marginBottom="33dp"
                android:layout_above="@+id/benviarReporte"
                android:layout_alignLeft="@+id/benviarReporte"
                android:layout_alignStart="@+id/benviarReporte"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Observaciones:"
                android:textColor="#000000"
                android:id="@+id/textView18"
                android:layout_above="@+id/benviarReporte"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etobservaciones"
                android:maxLines="1"
                android:layout_alignBottom="@+id/textView18"
                android:layout_alignLeft="@+id/benviarReporte"
                android:layout_alignStart="@+id/benviarReporte"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/benviarReporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbutton"
                android:layout_gravity="center_horizontal"
                android:text="Enviar"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

</RelativeLayout>